<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MainActivity">


    <Button
        android:id="@+id/inregistrarearticol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/inregistrare_articol"
        app:layout_constraintBottom_toBottomOf="@+id/listaarticole"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.175">

    </Button>

    <Button
        android:id="@+id/listaarticole"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lista_articole"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inregistrarearticol"
        app:layout_constraintVertical_bias="0.075" />

    <Button
        android:id="@+id/preluaredinfisiere"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:text="@string/preluare_articole_json_sau_xml"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/listaarticole" />

    <Button
        android:id="@+id/raport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/raport"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/preluaredinfisiere" />

    <Button
        android:id="@+id/despre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/despre"
        app:layout_constraintBottom_toBottomOf="@id/save"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/raport"
        app:layout_constraintVertical_bias="0.134" />

    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="saveToFile"
        android:text="SAVE"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/despre" />

    <Button
        android:id="@+id/load"
        android:layout_width="164dp"
        android:layout_height="47dp"
        android:onClick="load"
        android:text="LOAD"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="402dp"
        app:layout_constraintTop_toBottomOf="@id/save"/>


    <EditText
        android:id="@+id/titlu"
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Titlu"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/load" />

    <EditText
        android:id="@+id/abstractarticol"
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:hint="abstractarticol"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/titlu" />

    <EditText
        android:id="@+id/autor"
        android:layout_width="291dp"
        android:layout_height="45dp"
        android:ems="10"
        android:hint="Autor"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/abstractarticol"
        app:layout_constraintVertical_bias="0.207" />


</android.support.constraint.ConstraintLayout>